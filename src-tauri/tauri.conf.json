{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "The Gatherer",
  "version": "0.0.1",
  "identifier": "com.thegatherer.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "The Gatherer",
        "width": 960,
        "height": 540,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false
      }
    ],
    "trayIcon": null,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "category": "ActionGame",
    "windows": {
      "allowDowngrades": false
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
